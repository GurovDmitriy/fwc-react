{
  "**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": "next lint",
  "**/*.{vue,css,less,scss,html}": "stylelint --fix --allow-empty-input \"**/*.{css,less,scss}\" --ignore-path .stylelintignore",
  "**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,css,scss,less,md,json}": [
    "prettier --write \"**/*.{jsx,js,ts,tsx,css,less,scss,html,md}\" --ignore-path .prettierignore"
  ]
}
